@model CRbot.Models.User

<head>
    <style>
        @@import "//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css";
        @@import "http://fonts.googleapis.com/css?family=Roboto:400,500";


        #sum_box h4 {
            text-align: left;
            margin-top: 0px;
            font-size: 30px;
            margin-bottom: 0px;
            padding-bottom: 0px;
            color: #fff;

        }


        #sum_box .db:hover {
            color: #fff;
            background: url(https://lh3.googleusercontent.com/-G-3pjPs7rWY/VMjvGeCeZFI/AAAAAAAAaNw/zyVfbAcRBpM/w1184-h740/Android-Lollipop-wallpapers-d.jpg);
            opacity: 0.8;
        }



            #sum_box .db:hover .icon {
                opacity: 1;
                color: #999999;

            }

        #sum_box .icon {
            color: #fff;
            font-size: 55px;
            margin-top: 7px;
            margin-bottom: 0px;
            float: right;
        }




        .panel.settings.db.mbm {
            background: url(https://lh3.googleusercontent.com/-G-3pjPs7rWY/VMjvGeCeZFI/AAAAAAAAaNw/zyVfbAcRBpM/w1184-h740/Android-Lollipop-wallpapers-d.jpg);
        }

    </style>

</head>

<body>
    <br>
    <div class="icon">
